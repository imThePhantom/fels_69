<% if logged_in? %>
  <div class="container-fluid">
    <aside class="col-md-3">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
    <div class="col-md-8 content">
      <div class="row">
        <div class="col-md-6">
          <%= button_to t "button.words" , class: "btn btn-primary" %>
        </div>
        <div class="col-md-6">
          <%= button_to t "button.lessons" , class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-8 content">
      <h3><%= t "activities" %></h3>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "welcome" %></h1>
    <%= link_to t("signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails logo"), 
    "http://rubyonrails.org/" %>
<% end %>
