<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url %>
        <% else %>
          <%= image_tag "default-avatar.png"%>
        <% end %>
      </h1>
      <h3><%= @user.name %></h3>
      <span><%= @user.email %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </aside>

  <div class="col-md-8">
    <%= render "follow_form" if logged_in? %>
    <h1><%= t "activities" %></h1>
    <%= render @lessons %>
  </div>

</div>
