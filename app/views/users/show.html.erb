<% provide :title, @user.name %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar.url %>
        <% else %>
          <%= image_tag "default-avatar.png"%>
        <% end %>
      </h1>
        <%= @user.name %>
        <%= @user.email %>
    </section>
  </aside>
</div>
