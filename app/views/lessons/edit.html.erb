<%=javascript_tag "time_remaining(#{@time_remain})" %>
<h1 align="center"><%= @category.name %></h1>
<% if @time_over %>
  <h3 class="text-center">
    <%= t "point" %>
    <%= @lesson.correct_count %>/<%= @lesson.results.count %>
  </h3>
<% end %>
<h3 class="pull-right">
  <span class="glyphicon glyphicon-time"></span>
  <span id="time-remaining"></span>
</h3>
<div class="container">
  <div class="row" id="lesson">
    <%= form_for [@category, @lesson] do |f| %>
      <%= f.fields_for :results do |builder| %>
        <div class="col-md-10">
          <%= render "result_form", f: builder %>
        </div>
      <% end %>
      <div class="col-md-4 col-md-offset-4">
        <%= f.submit t("submit"),disabled: @time_over, class: "btn btn-primary"%> 
      </div>
    <% end %>
  </div>
</div>
